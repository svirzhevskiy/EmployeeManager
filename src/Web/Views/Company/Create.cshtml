@model Logic.DTOs.CompanyDTO

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>@ViewBag.Title компанию</h4>
        
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        
        <div class="form-group">
            @Html.LabelFor(x => x.Title, "Наименование", new { @class = "control-label col-md-2"})
            <div class="col-md-10">
                @Html.EditorFor(x => x.Title, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(x => x.Title, "", new { @class = "text-danger" })
            </div>
        </div>
        
        <div class="form-group">
            @Html.LabelFor(x => x.LegalForm, "Организационно-правовая форма", new { @class = "control-label col-md-2"})
            <div class="col-md-10">
                @Html.DropDownListFor(x => x.LegalForm.Id, ViewBag.LegalForms as SelectList)
                @Html.ValidationMessageFor(x => x.LegalForm.Id, "", new { @class = "text-danger" })
            </div>
        </div>
        
        <div class="form-group">  
            <div class="col-md-offset-2 col-md-10">  
                <button type="submit" class="btn btn-primary">Сохранить</button>  
            </div>  
        </div>
    </div>
}
