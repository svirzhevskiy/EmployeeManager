@model Logic.DTOs.EmployeeDTO

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>@ViewBag.Title работника</h4>
        
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        
        <div class="form-group">
            @Html.LabelFor(x => x.Surname, "Фамилия", new { @class = "control-label col-md-2"})
            <div class="col-md-10">
                @Html.EditorFor(x => x.Surname, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(x => x.Surname, "", new { @class = "text-danger" })
            </div>
        </div>
        
        <div class="form-group">
            @Html.LabelFor(x => x.Name, "Имя", new { @class = "control-label col-md-2"})
            <div class="col-md-10">
                @Html.EditorFor(x => x.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(x => x.Name, "", new { @class = "text-danger" })
            </div>
        </div>
        
        <div class="form-group">
            @Html.LabelFor(x => x.Patronymic, "Отчество", new { @class = "control-label col-md-2"})
            <div class="col-md-10">
                @Html.EditorFor(x => x.Patronymic, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(x => x.Patronymic, "", new { @class = "text-danger" })
            </div>
        </div>
        
        <div class="form-group">
            @Html.LabelFor(x => x.EmploymentDate, "Дата приема на работу", new { @class = "control-label col-md-2"})
            <div class="col-md-10">
                <input type="date" />
            </div>
        </div>
        
        <div class="form-group">
            @Html.LabelFor(x => x.Company, "Компания", new { @class = "control-label col-md-2"})
            <div class="col-md-10">
                @Html.DropDownListFor(x => x.Company.Id, ViewBag.Companies as SelectList)
                @Html.ValidationMessageFor(x => x.Company.Id, "", new { @class = "text-danger" })
            </div>
        </div>
        
        <div class="form-group">
            @Html.LabelFor(x => x.Position, "Должность", new { @class = "control-label col-md-2"})
            <div class="col-md-10">
                @Html.DropDownListFor(x => x.Position.Id, ViewBag.Positions as SelectList)
                @Html.ValidationMessageFor(x => x.Position.Id, "", new { @class = "text-danger" })
            </div>
        </div>
        
        <div class="form-group">  
            <div class="col-md-offset-2 col-md-10">  
                <button type="submit" class="btn btn-primary">Сохранить</button>  
            </div>  
        </div>
    </div>
}
